<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".timeline.TimelineTitleAndHappenTimeInfoActivity">

    <include
        android:id="@+id/tb_a_add_timeline_add_title_and_happen_time"
        layout="@layout/tile_toolbar" />

    <RelativeLayout
        android:id="@+id/rl_title_a_add_timeline_add_title_and_happen_time"
        android:layout_marginTop="@dimen/distance32"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title_a_add_timeline_add_title_and_happen_time"
            style="@style/Paragraph"
            android:text="标题"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_title_a_add_timeline_add_title_and_happen_time"
            style="@style/EditTextNormal"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/distance192"
            android:textAlignment="textEnd"
            android:hint="标题"
            android:inputType="text" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_event_name_a_add_timeline_add_title_and_happen_time"
        android:layout_marginTop="@dimen/distance16"
        style="@style/RelativeLayoutTile">
        <TextView
            android:id="@+id/tv_event_name_a_add_timeline_add_title_and_happen_time"
            style="@style/Paragraph"
            android:text="事件"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/sp_event_name_a_add_timeline_add_title_and_happen_time"
            style="@style/EditTextNormal"
            android:textAlignment="textEnd"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/distance256"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_happen_time_a_add_timeline_add_title_and_happen_time"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_happen_time_a_add_timeline_add_title_and_happen_time"
            style="@style/Paragraph"
            android:text="发生时间"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_happen_date_a_add_timeline_add_title_and_happen_time"
            android:layout_alignParentRight="false"
            android:layout_toLeftOf="@id/et_happen_time_a_add_timeline_add_title_and_happen_time"
            style="@style/EditTextNormal"
            android:layout_width="@dimen/distance128"
            android:textAlignment="center"
            android:hint="日期"
            android:inputType="text" />
        <EditText
            android:id="@+id/et_happen_time_a_add_timeline_add_title_and_happen_time"
            style="@style/EditTextNormal"
            android:layout_width="@dimen/distance72"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:hint="时间"
            android:inputType="text" />
    </RelativeLayout>

    <include android:id="tips_a_add_timeline_add_title_and_happen_time"
        layout="@layout/tile_tips"/>

</LinearLayout>