<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.UserInfoActivity">

    <include
        android:id="@+id/tb_a_user_info"
        layout="@layout/tile_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="@dimen/distance16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ig_icon_a_user_info"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/distance72"
                    android:layout_height="@dimen/distance72" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_name_a_user_info"
                android:layout_marginTop="@dimen/distance16"
                style="@style/RelativeLayoutTile">
                <TextView
                    android:id="@+id/tv_name_a_user_info"
                    style="@style/Paragraph"
                    android:text="登录名"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_name_a_user_info"
                    style="@style/EditTextNormal"
                    android:layout_width="@dimen/distance192"
                    android:layout_centerVertical="true"
                    android:textAlignment="textEnd"
                    android:layout_alignParentRight="true"
                    android:hint="登录名"
                    android:inputType="text" />
                <TextView
                    android:id="@+id/tv_noedit_name_a_user_info"
                    style="@style/EditTextNormal"
                    android:layout_marginRight="12dp"
                    android:textAlignment="textEnd"
                    android:text="登录名"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_name_a_user_info" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_pwd_a_user_info"
                style="@style/RelativeLayoutTile">
                <TextView
                    android:id="@+id/tv_pwd_a_user_info"
                    style="@style/Paragraph"
                    android:text="密码"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_pwd_a_user_info"
                    style="@style/EditTextNormal"
                    android:layout_width="@dimen/distance192"
                    android:layout_centerVertical="true"
                    android:textAlignment="textEnd"
                    android:layout_alignParentRight="true"
                    android:hint="asdfgh1234"
                    android:inputType="text" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_nickname_a_user_info"
                style="@style/RelativeLayoutTile">
                <TextView
                    android:id="@+id/tv_nickname_a_user_info"
                    style="@style/Paragraph"
                    android:text="昵称"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_nickname_a_user_info"
                    style="@style/EditTextNormal"
                    android:layout_width="@dimen/distance192"
                    android:layout_alignParentRight="true"
                    android:textAlignment="textEnd"
                    android:layout_centerVertical="true"
                    android:hint="小猪佩琪"
                    android:inputType="text" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_email_a_user_info"
                style="@style/RelativeLayoutTile">
                <TextView
                    android:id="@+id/tv_email_a_user_info"
                    style="@style/Paragraph"
                    android:text="电子邮件"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_email_a_user_info"
                    style="@style/EditTextNormal"
                    android:layout_centerVertical="true"
                    android:textAlignment="textEnd"
                    android:hint="yourname@example.com"
                    android:inputType="text"
                    android:layout_width="@dimen/distance192"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_motto_a_user_info"
                style="@style/RelativeLayoutTile">
                <TextView
                    android:id="@+id/tv_motto_a_user_info"
                    style="@style/Paragraph"
                    android:text="签名"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_motto_a_user_info"
                    style="@style/EditTextNormal"
                    android:textAlignment="textEnd"
                    android:hint="书籍是人类进步的阶梯"
                    android:layout_centerVertical="true"
                    android:inputType="text"
                    android:layout_width="@dimen/distance256"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_status_a_user_info"
                android:layout_marginTop="@dimen/distance16"
                style="@style/RelativeLayoutTile">
                <TextView
                    android:id="@+id/tv_status_a_user_info"
                    style="@style/Paragraph"
                    android:text="状态"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_noedit_status_a_user_info"
                    style="@style/EditTextNormal"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="12dp"
                    android:text="已锁定"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_status_a_user_info" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_del_a_user_info"
                android:layout_marginBottom="@dimen/distance16"
                style="@style/RelativeLayoutTile">
                <TextView
                    android:id="@+id/tv_del_a_user_info"
                    style="@style/Paragraph"
                    android:text="是否已删除"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_noedit_del_a_user_info"
                    style="@style/EditTextNormal"
                    android:textAlignment="textEnd"
                    android:layout_marginRight="12dp"
                    android:text="已删除"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_del_a_user_info" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>