<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".admin.AdminPwdModifyActivity">
    
    <include
        android:id="@+id/tb_a_admin_pwd_modify"
        layout="@layout/tile_toolbar">
    </include>

    <RelativeLayout
        android:layout_marginTop="@dimen/distance16"
        android:id="@+id/rl_pwd_a_admin_pwd_modify"
        style="@style/RelativeLayoutTile">
        <TextView
            android:id="@+id/tv_pwd_a_admin_pwd_modify"
            style="@style/Paragraph"
            android:text="新密码"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_pwd_a_admin_pwd_modify"
            style="@style/EditTextNormal"
            android:layout_width="@dimen/distance192"
            android:layout_centerVertical="true"
            android:textAlignment="textEnd"
            android:layout_alignParentRight="true"
            android:hint="asdfgh1234"
            android:inputType="text" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_rpt_pwd_a_admin_pwd_modify"
        style="@style/RelativeLayoutTile">
        <TextView
            android:id="@+id/tv_rpt_pwd_a_admin_pwd_modify"
            style="@style/Paragraph"
            android:text="重复新密码"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_rpt_pwd_a_admin_pwd_modify"
            style="@style/EditTextNormal"
            android:layout_width="@dimen/distance192"
            android:layout_centerVertical="true"
            android:textAlignment="textEnd"
            android:layout_alignParentRight="true"
            android:hint="asdfgh1234"
            android:inputType="text" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_tips"
        android:layout_marginLeft="@dimen/distance16"
        android:layout_marginRight="@dimen/distance16"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>