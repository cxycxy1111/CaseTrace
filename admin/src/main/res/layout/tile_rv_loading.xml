<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pb_t_rv_loading"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/distance64"
        android:layout_height="@dimen/distance64" />
    <TextView
        android:id="@+id/tv_t_rv_loading"
        android:layout_below="@id/pb_t_rv_loading"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/distance32"
        android:layout_centerHorizontal="true"
        android:text="正在加载..."
        style="@style/Paragraph" />

</RelativeLayout>