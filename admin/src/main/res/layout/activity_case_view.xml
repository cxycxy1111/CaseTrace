<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cases.CaseViewActivity">

    <include
        android:id="@+id/tb_a_case_view"
        layout="@layout/tile_toolbar"/>

    <ScrollView
        android:id="@+id/sv_a_case_view"
        android:layout_below="@id/tb_a_case_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_id_a_case_view"
                style="@style/RelativeLayoutNormal">
                <TextView
                    android:id="@+id/tv_id_a_case_view"
                    style="@style/Paragraph"
                    android:text="ID"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/et_id_a_case_view"
                    android:text="@string/app_name"
                    style="@style/HintNormal"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_title_a_case_view"
                style="@style/RelativeLayoutNormal">
                <TextView
                    android:id="@+id/tv_title_a_case_view"
                    style="@style/Paragraph"
                    android:text="标题"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/et_title_a_case_view"
                    android:layout_toRightOf="@id/tv_title_a_case_view"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/app_name"
                    style="@style/HintNormal"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
            <WebView
                android:id="@+id/wv_a_case_view"
                android:layout_marginTop="@dimen/distance1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:id="@+id/rl_event_id_a_case_view"
                style="@style/RelativeLayoutFirst">
                <TextView
                    android:id="@+id/tv_event_id_a_case_view"
                    style="@style/Paragraph"
                    android:text="事件ID"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/et_event_id_a_case_view"
                    android:text="@string/app_name"
                    style="@style/HintNormal"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_event_title_a_case_view"
                style="@style/RelativeLayoutNormal">
                <TextView
                    android:id="@+id/tv_event_title_a_case_view"
                    style="@style/Paragraph"
                    android:text="事件标题"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/et_event_title_a_case_view"
                    android:text="@string/app_name"
                    style="@style/HintNormal"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_create_time_a_case_view"
                style="@style/RelativeLayoutFirst">
                <TextView
                    android:id="@+id/tv_create_time_a_case_view"
                    style="@style/Paragraph"
                    android:text="创建时间"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/et_create_time_a_case_view"
                    android:text="@string/app_name"
                    style="@style/HintNormal"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_update_time_a_case_view"
                style="@style/RelativeLayoutNormal">
                <TextView
                    android:id="@+id/tv_update_time_a_case_view"
                    style="@style/Paragraph"
                    android:text="更新时间"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/et_update_time_a_case_view"
                    android:text="@string/app_name"
                    style="@style/HintNormal"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_upvote_count_a_case_view"
                style="@style/RelativeLayoutFirst">
                <TextView
                    android:id="@+id/tv_upvote_count_a_case_view"
                    style="@style/Paragraph"
                    android:text="赞同数"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/et_upvote_count_a_case_view"
                    android:text="@string/app_name"
                    style="@style/HintNormal"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_down_count_a_case_view"
                style="@style/RelativeLayoutNormal">
                <TextView
                    android:id="@+id/tv_down_count_a_case_view"
                    style="@style/Paragraph"
                    android:text="反对数"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/et_down_count_a_case_view"
                    android:text="@string/app_name"
                    style="@style/HintNormal"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_view_count_a_case_view"
                style="@style/RelativeLayoutNormal">
                <TextView
                    android:id="@+id/tv_view_count_a_case_view"
                    style="@style/Paragraph"
                    android:text="阅读数"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/et_view_count_a_case_view"
                    android:text="@string/app_name"
                    style="@style/HintNormal"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_del_a_case_view"
                style="@style/RelativeLayoutFirst">
                <TextView
                    android:id="@+id/tv_del_a_case_view"
                    style="@style/Paragraph"
                    android:text="是否删除"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/et_del_a_case_view"
                    android:text="@string/app_name"
                    style="@style/HintNormal"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_status_a_case_view"
                style="@style/RelativeLayoutNormal">
                <TextView
                    android:id="@+id/tv_status_a_case_view"
                    style="@style/Paragraph"
                    android:text="状态"
                    android:layout_alignParentLeft="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/et_status_a_case_view"
                    android:text="@string/app_name"
                    style="@style/HintNormal"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>