<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/tb_a_main"
        layout="@layout/tile_toolbar"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_a_main"
        android:layout_below="@id/tb_a_main"
        android:layout_above="@id/bnb_a_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <android.support.design.widget.BottomNavigationView
        android:layout_alignParentBottom="true"
        android:id="@+id/bnb_a_main"
        android:layout_width="match_parent"
        app:elevation="@dimen/distance4"
        app:itemBackground="@color/bottomNavigationbarBackgroundColor"
        app:itemTextColor="@color/colorPrimary"
        app:itemIconTint="@color/colorPrimaryDark"
        app:menu="@menu/menu_bnb"
        android:layout_height="@dimen/bottom_navigation_height">
    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>